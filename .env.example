# Vercel Postgres Database
# Get these from Vercel Dashboard > Storage > Postgres
POSTGRES_PRISMA_URL=postgres://user:password@host:5432/database?sslmode=require&pgbouncer=true
POSTGRES_URL_NON_POOLING=postgres://user:password@host:5432/database?sslmode=require

# Authentication (required)
# Get these from Google Cloud Console: https://console.cloud.google.com
# Create OAuth 2.0 credentials (Web application type)
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_client_secret

# Auth callback URI - add this to Google OAuth authorized redirect URIs
GOOGLE_AUTH_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# Drive callback URI - add this to Google OAuth authorized redirect URIs  
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/api/cloud/google/callback

# JWT Secret for session tokens (generate a random string for production)
JWT_SECRET=your-secret-key-change-in-production

# Dropbox (optional)
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret
DROPBOX_REDIRECT_URI=http://localhost:3001/api/cloud/dropbox/callback

# OpenAI (for Noah AI features)
OPENAI_API_KEY=your_openai_api_key

# Spotify (for song search autocomplete)
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
